@page
@model TorrentStreamer.Pages.HistoryModel
@{
    ViewData["Title"] = "File History||Torrent Streamer";
}
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Size</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model.TorrentFiles)
        {
            <tr>
                <td>@file.Name</td>
                <td>@file.Length</td>
                <td>
                    <button class="btn btn-primary">Stream</button>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

