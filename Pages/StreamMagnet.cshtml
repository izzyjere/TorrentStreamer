@page
@model TorrentStreamer.Pages.StreamMagnetModel
@{
    ViewData["Title"] = "Torrent Streamer || Magnet";
}
<section class="ftco-section">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div id="download-progress-container" style="display: none;">
                    <div id="download-progress-header">Downloading: <span id="download-file-name"></span></div>
                    <div id="download-progress-bar-container">
                        <div id="download-progress-bar" class="progress">
                            <div id="download-progress" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <h4 id="table-header" class="text-center mb-4"></h4>
                <button onclick="getMagnet('@Model.MagnetUrl')" class="btn btn-success mb-4">Load Torrent.</button>

                <div id="torrent-files">
                    <div class="table-wrap">
                        <table class="table">
                            <colgroup>
                                <col width="50%" />
                                <col width="15%" />
                                <col width="20%" />
                            </colgroup>
                            <thead class="thead-primary">
                                <tr>
                                    <th>File Name</th>
                                    <th>File Size</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="torrent-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<main>
    <div id="resultsContainer" class="container mt-3"></div>
    <section id="playerContainer" class="container mt-3" style="display: none;">
        <video id="player" controls class="w-100"></video>
    </section>
</main>
